<div class="row">
{% for post in postslist | reverse %}
  <div class="col-md-4 p-3">
  <a href="{{ post.url | url }}" class="postlist-link">
  <img class="img-fluid rounded" alt="{{post.data.title}}" height="100%" width="100%" lazy="loading" src="{{post.data.cover}}"/>
  <div class="p-3">
    <h3><strong>{{ post.data.title }}</strong></h3>
    <p>{{ post.data.description }}</p>
   </a>
  </div>
  </div>
{% endfor %}
</div>